public void ReadFile(string path)
        {
            string[] Noidungfile;
            string[] Noidungline;
            string English, Vietnamese, Exam;
            Noidungfile = File.ReadAllLines(path);
            if (Noidungfile != null)
            {
                int N = Noidungfile.Length;
                for (int i = 0; i < N; i++)
                {
                    Noidungline = Noidungfile[i].Split(';');
                    English = Noidungline[0].Trim();
                    Vietnamese = Noidungline[1].Trim();
                    Exam = Noidungline[2].Trim();
                    D.Add(new Dic { EWord = English, VWord = Vietnamese, Example = Exam });
                }
            }
        }
